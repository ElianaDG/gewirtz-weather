<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gewirtz.openweathermap.OpenWeatherMapController"
          prefHeight="400.0" prefWidth="400.0">

        <Button fx:id="searchButton" text="Search Location" onAction="#onGetLocationWeather" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="locationTextField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

    <Label fx:id="currentWeatherTextLabel" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
    <Label fx:id="currentWeatherLabel" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
    <Label fx:id="currentIconLabel" GridPane.rowIndex="4" GridPane.columnIndex="5"/>
    <ImageView fx:id="currentIconImage" GridPane.rowIndex="4" GridPane.columnIndex="5"/>

    <Label fx:id="forecastLabel" text="5-day Forecast" GridPane.rowIndex="6" GridPane.columnIndex="3"/>

    <TableView fx:id="tableView" prefHeight="300" prefWidth="300" GridPane.rowIndex="8" GridPane.columnIndex="3">
        <columns>
            <TableColumn fx:id="weatherColumn" text="Weather"/>
            <TableColumn fx:id="iconColumn" text="Icon"/>
        </columns>
    </TableView>

</GridPane>
